{
    "name": "@myclassroom/server",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@trycourier/courier": "^6.1.1",
        "bcrypt": "^5.1.1",
        "cookie": "^0.6.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.0",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "mysql2": "^3.9.7",
        "npx": "^10.2.2",
        "sequelize": "^6.37.3",
        "sequelize-cli": "^6.5.2",
        "supertest": "^7.0.0",
        "winston": "^3.13.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
	"devDependencies": {
		"dotenv": "^16.4.5",
		"nodemon": "^3.1.0"
	},
	"scripts": {
        "config": "cp .env.example .env && nano .env",
        "setup-db": "node db/setup-db.js",
		"test": "NODE_ENV=test jest --runInBand",
		"start": "NODE_ENV=production node app/server.js",
        "start:dev": "NODE_ENV=development nodemon app/server.js",
        "start:test": "NODE_ENV=test nodemon app/server.js",
        "migrate": "npx sequelize-cli db:migrate --env production",
        "migrate:dev": "npx sequelize-cli db:migrate --env development",
        "migrate:test": "npx sequelize-cli db:migrate --env test",
        "unmigrate": "npx sequelize-cli db:migrate:undo:all --env production",
        "unmigrate:dev": "npx sequelize-cli db:migrate:undo:all --env development",
        "unmigrate:test": "npx sequelize-cli db:migrate:undo:all --env test",
        "seed": "npx sequelize-cli db:seed:all  --env production",
        "seed:test": "npx sequelize-cli db:seed:all --env test",
        "unseed": "npx sequelize-cli db:seed:undo:all --env production",
        "unseed:dev": "npx sequelize-cli db:seed:undo:all --env development",
        "unseed:test": "npx sequelize-cli db:seed:undo:all --env test",
        "drop": "npx sequelize-cli db:drop --env production",
        "drop:dev": "npx sequelize-cli db:drop --env development",
        "drop:test": "npx sequelize-cli db:drop --env test"
	}
}
